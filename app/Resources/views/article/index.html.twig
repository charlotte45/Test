{% extends 'base.html.twig' %}

{% block body %}
   <ul>
       {% for article in articles %}
           <li>
               <h1>
                   <a href="{{ path('article_show', {'slug' : article.slug }) }}">{{ article.title }}</a>
                   - {{ article.updatedDate | date('d-m-Y') }}
               </h1>
               <p>{{ article.content }}</p>
           </li>
       {% endfor %}
   </ul>
{% endblock %}
